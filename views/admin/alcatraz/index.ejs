<% layout("/layouts/boilerplate") -%>

<div class="row">
	<div class="col-md-12">
		<div class="well">
			<a href="/admin/alcatraz/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New</a>
		</div>
	</div>
<% allAlcatraz.forEach(function(alcatraz) { %>
  <div class="col-md-12">
  	<div class="well">
  		<div class="row">
  			<div class="col-md-8">
  				<p>
			  		<strong><%= alcatraz.stockQty %></strong> tickets on <strong><%= moment(alcatraz.datetime).format('MMMM Do, h:mm a') %></strong>
		  		</p>
					<p>
						<button class="btn btn-sm btn-success" type="button" data-toggle="collapse" data-target="#<%= alcatraz._id %>" aria-expanded="false" aria-controls="<%= alcatraz._id %>">
						  Prices <span class="caret"></span>
						</button>
					</p>
					<div class="collapse" id="<%= alcatraz._id %>">
						<div class="row">
							<% alcatraz.comboProducts.forEach(function(comboProduct) { %>
								<div class="col-md-4">
								<%= comboProduct.title %>
								</div>
							<% }); %>
						</div>
					</div>
				</div>
				<div class="col-md-4">
					<div class="pull-right">
						<a href="/alcatraz/<%= alcatraz._id %>/edit" class="btn btn-warning">Edit</a>
						<form action="/alcatraz/<%= alcatraz._id %>?_method=DELETE" method="POST" class="inline-block">
							<input type="submit" value="Delete" class="btn btn-danger">
						</form>
					</div>
					<div class="clearfix"></div>
				</div>
  		</div>
  	</div>
  </div>
<% }); %>
</div>