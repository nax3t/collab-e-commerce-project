<% layout("/layouts/boilerplate") -%>

<div class="row">
	<div class="col-md-12">
		<div class="well">
			<a href="/admin/combo-products/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New</a>
		</div>
	</div>
<% comboProducts.forEach(function(comboProduct) { %>
  <div class="col-md-12">
  	<div class="well">
  		<div class="pull-left">
				<p><strong><%= comboProduct.title %></strong></p>
				<p>Adult: <strong>$<%= comboProduct.adult %></strong></p>
				<p>Senior: <strong>$<%= comboProduct.senior %></strong></p>
				<p>Child: <strong>$<%= comboProduct.child %></strong></p>
			</div>
			<div class="pull-right">
				<a href="/combo-products/<%= comboProduct._id %>/edit" class="btn btn-warning">Edit</a>
				<form action="/combo-products/<%= comboProduct._id %>?_method=DELETE" method="POST" class="inline-block">
					<input type="submit" value="Delete" class="btn btn-danger">
				</form>
			</div>
			<div class="clearfix"></div>
  	</div>
  </div>
<% }); %>
</div>