<% layout("/layouts/boilerplate") -%>

<form action="/admin/combo-products" method="POST">

	<div class="form-group">
		<p><a href="/admin/categories/new" target="_blank" class="btn btn-sm btn-success">Create New Category</a></p>
		<label for="category">Category</label>
		<select name="comboProduct[category]" class="form-control" id="category">
			<% categories.forEach(function(category) { %> 
				<option value="<%= category.title %>"><%= category.title %></option>
			<% }); %>
		</select>
	</div>

	<div class="checkbox">
	  <label>
	    <input type="checkbox" name="comboProduct[sale]" value="true">
	    Is this product on sale?
	  </label>
	</div>
	
	<fieldset>
		<legend>Prices</legend>
		
		<div class="form-group">
			<label for="adult">Adult</label>
			<input type="number" id="adult" name="comboProduct[adult]" class="form-control">
		</div>
		
		<div class="form-group">
			<label for="senior">Senior</label>
			<input type="number" id="senior" name="comboProduct[senior]" class="form-control">
		</div>
	
		<div class="form-group">
			<label for="child">Child</label>
			<input type="number" id="child" name="comboProduct[child]" class="form-control">
		</div>
	</fieldset>

	<input type="submit" class="btn btn-default">
</form>
