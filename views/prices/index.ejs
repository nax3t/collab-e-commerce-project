<% layout("layouts/boilerplate") -%>

<div class="row">
	<div class="col-md-12">
		<div class="well">
			<a href="/prices/new" class="btn btn-primary"><i class="glyphicon glyphicon-plus"></i> Add New</a>
		</div>
	</div>
<% prices.forEach(function(price) { %>
  <div class="col-md-12">
  	<div class="well">
  		<div class="pull-left">
				<p><strong><%= price.title %></strong></p>
				<p>Adult: <strong>$<%= price.adult %></strong></p>
				<p>Senior: <strong>$<%= price.senior %></strong></p>
				<p>Child: <strong>$<%= price.child %></strong></p>
			</div>
			<div class="pull-right">
				<a href="/prices/<%= price._id %>/edit" class="btn btn-warning">Edit</a>
				<form action="/prices/<%= price._id %>?_method=DELETE" method="POST" class="inline-block">
					<input type="submit" value="Delete" class="btn btn-danger">
				</form>
			</div>
			<div class="clearfix"></div>
  	</div>
  </div>
<% }); %>
</div>